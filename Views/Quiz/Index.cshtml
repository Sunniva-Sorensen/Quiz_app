@model IEnumerable<QuizApp.Models.Quiz>

@{
    ViewData["Title"] = "All Quizzes";
}

<h1 class="mb-3">All Quizzes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">âž• Create New Quiz</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var quiz in Model)
    {
        <tr>
            <td>@quiz.Title</td>
            <td>@quiz.Description</td>
            <td>
                <a asp-action="Details" asp-route-id="@quiz.QuizId" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@quiz.QuizId" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@quiz.QuizId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
